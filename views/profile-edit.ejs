<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include part/css %>
  </head>
  <body>
    <%- include part/menu %>

    <div class="col-md-8 col-md-offset-2">
      <form class="form-inline" action="/profiles/<%= dataProfile.id %>/edit" method="post">
        <label>New Profile Editor</label><br>
        <input type="text" name="username" value="<%= dataProfile.username %>" class="form-control">
        <input type="password" name="password" value="<%= dataProfile.password %>" class="form-control">
        <input type="text" name="firstname" value="<%= dataProfile.firstname %>" class="form-control">
        <input type="text" name="lastname" value="<%= dataProfile.lastname %>" class="form-control">
        <select  name="ContactId" class="form-control">
          <option value="" disabled selected>select a Contact</option>

          <% dataKontak.forEach(getData => { %>
            <% let selected = ''
            if(getData.id == dataProfile.ContactId){
              selected = 'selected'
            } %>
            <option value="<%= getData.id %>" <%= selected %> ><%= getData.name %></option>
          <% }) %>
        </select>
        <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Edit Profile</button>
      </form>
      <br>

    </div>
  </body>
</html>
