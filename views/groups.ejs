<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My Groups</title>
  </head>
  <body>
    <h1>Group List View</h1>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <%grp.forEach(g=> { %>
          <tr>
            <td><%= g.id %></td>
            <td><%= g.name_of_group %></td>
            <td><a href="/groups/edit/<%=g.id%>">Edit</a> | <a href="/groups/delete/<%=g.id%>">Delete</a></td>
          </tr>
        <% })%>
      </tbody>
    </table>
    <br><br>
    <form action="/groups" method="post">
      <fieldset>
        <legend>Group Information</legend>
        <input type="text" name="name_of_group" placeholder="ketik nama group"><br>
        <input type="submit" value="Add">
      </fieldset>
    </form>
    <br><br>
    <a href="/">Home</a>
    <a href="/contacts">Contacts</a>
    <a href="/groups">Groups</a>
    <a href="/addresses">Addresses</a>
    <a href="/profiles">Profiles</a
  </body>
</html>
