<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>GROUPS</title>
  </head>

  <body>
    <div class="title" align=center>
      <table align=center>
        <tr>
          <th>ID</th>
          <th>NAMA GRUP</th>
        </tr>
        <% dataGroup.forEach( cont => { %>
          <tr>
            <td>
              <%= cont.id %>
            </td>
            <td>
              <%= cont.name_of_group %>
            </td>
            <td><a href="/groups/editG/<%= cont.id %>">EDIT</a></td>
            <td><a href="/groups/delete/<%= cont.id %>">DELETE</a></td>
          </tr>
          <% }) %>

            <h1>FORM</h1>
            <form action="/groups" method="post">
              <input type="text" name="grup" placeholder="Insert Your Group Name"><br>
              <input type="submit" value="Submit">
            </form>

      </table>
    </div>
  </body>

</html>
