<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit Groups</title>
  </head>
  <body>
    <h1>Edit Group Information</h1>
    <br><br>
    <%grp.forEach(g=> { %>
    <form action="/groups/edit/<%=g.id%>" method="post">
      <fieldset>
        <legend>Group Information</legend>
        <input type="text" name="name_of_group" value="<%= g.name_of_group %>"><br>
        <input type="submit" value="Update">
      </fieldset>
    </form>
    <% }) %>

    <br><br>
    <a href="/">Home</a>
    <a href="/contacts">Contacts</a>
    <a href="/groups">Groups</a>
    <a href="/addresses">Addresses</a>
    <a href="/profiles">Profiles</a
  </body>
</html>
