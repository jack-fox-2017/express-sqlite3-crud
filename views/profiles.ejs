<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profile Page</title>
  </head>
  <body>
    <h1>Profiles List View</h1>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Username</th>
          <th>Password</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <%prf.forEach(p=> { %>
          <tr>
            <td><%= p.id %></td>
            <td><%= p.username %></td>
            <td><%= p.password %></td>
            <td><a href="/profiles/edit/<%=p.id%>">Edit</a> | <a href="/profiles/delete/<%=p.id%>">Delete</a></td>
          </tr>
        <% })%>
      </tbody>
    </table>
    <br><br>
    <form action="/profiles" method="post">
      <fieldset>
        <legend>Profile Information</legend>
        <input type="text" name="username" placeholder="ketik username"><br>
        <input type="text" name="password" placeholder="ketik password"><br>
        <input type="submit" value="Add">
      </fieldset>
    </form>
    <br><br>
    <a href="/">Home</a>
    <a href="/contacts">Contacts</a>
    <a href="/groups">Groups</a>
    <a href="/addresses">Addresses</a>
    <a href="/profiles">Profiles</a>
  </body>
</html>
