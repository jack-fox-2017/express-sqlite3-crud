<!DOCTYPE html>
<html>
  <head>
    <style>
    table, th, td {
      border: 1px solid black;
    }
    fieldset {
       display: block;
       margin-left: 2px;
       margin-right: 1950px;
       padding-top: 0.35em;
       padding-bottom: 0.625em;
       padding-left: 0.175em;
       padding-right: 0.75em;
       border: 2px groove (internal value);
    }
    </style>
    <meta charset="utf-8">
    <title>Groups</title>
  </head>
  <body>

      <h1> Welcome To Profiles </h1>

      <a href='/'>home</a>
    <br><br>
        <table>
          <tr>
            <th>id</th>
            <th>username</th>
            <th>password</th>
            <th>Edit</th>
            <th>Delete</th>

          </tr>
          <% data.forEach(d => {  %>
          <tr>
            <td><%= d.id %></td>
            <td><%= d.username %></td>
            <td><%= d.password %></td>
            <td><a href="profiles/editProfiles/<%= d.id %>">edit</a></td>
            <td><a href="profiles/deleteProfiles/<%= d.id %>">delete</td>
          </tr>
          <%  }) %>
        </table>

        <h1> </h1>
        <form action="/profiles" method="post">
          <fieldset>
            <legend>Tambah Profiles </legend>
            username:<br>
            <input type="text" name="username">
            <br>
            password:<br>
            <input type="text" name="password">
            <br><br>
            <button type="submit">Save</button>
          </fieldset>
        </form>



  </body>
</html>
