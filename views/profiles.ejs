<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Profile</title>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
    <center>
    <h1>Profile</h1>
    <div class="container">
    <center>
      <center>
        <table class="table table-hover">
          <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>Password</th>
            <th>Action</th>
          </tr>
          <% data.forEach(d => { %>
            <tr>
              <td><%=d.id%></td>
              <td><%=d.username%></td>
              <td><%=d.password%></td>
              <td><a href="/profiles/edit/<%= d.id %>"><button type="button" class="btn btn-primary btn-sm" name="button">Edit</button></a>
              <a href="profiles/delete/<%= d.id %>"><button type="button" class="btn btn-primary btn-sm" name="button">Delete</button></a>
              </td>
            </tr>
          <%})%>
        </table>
      </center>
    </div>
    <center>
      <form action="/profiles" method="post">
        <div class="form-group">
          <div class="container-fluid">
          <label><b>User Name</b></label>
          <input type="text" class="form-control" name="username" placeholder="Input Your User Name">
          <label><b>Password</b></label>
          <input type="text" class="form-control" name="password" placeholder="Input Your Password">
          <button type="submit" class="form-control" name="button">Submit</button>
        </div>
        </div>
      </form>
        <a class="btn btn-default" href="/" role="button">Home</a>
    </center>
  </div>
  </body>
</html>
