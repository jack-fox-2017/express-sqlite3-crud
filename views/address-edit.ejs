<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include part/css %>
  </head>
  <body>
    <%- include part/menu %>

    <div class="col-md-8 col-md-offset-2">
      <form class="form-inline" action="/addresses/<%= data.id %>/edit" method="post">
        <label>New Address Register Form</label><br>
        <input type="text" name="address" value="<%= data.address %>" class="form-control">
        <input type="text" name="city" value="<%= data.city %>" class="form-control">
        <input type="text" name="zipcode" value="<%= data.zipcode %>" class="form-control">
        <select  name="ContactId" class="form-control">
          <option value="" disabled selected>select Contact</option>

          <% kontak.forEach(getData => {
              selected = ''
              if(getData.id == data.ContactId){
                selected = 'selected'
              }
            %>
            <option value="<%= getData.id %>" <%= selected %>><%= getData.name %></option>
          <% }) %>
        </select>
        <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Edit Address</button>
      </form>
      <br>

    </div>
  </body>
</html>
