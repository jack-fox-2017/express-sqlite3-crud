<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Groups</title>
  </head>
  <style>
        table, th, td {
          border: 1px solid black;
          border-collapse: collapse;
        }
        th, td {
            padding: 5px;
            text-align: left;
        }
  </style>
  <body>
    <h1>===Groups===</h1>
    <h2>
        <table style="width:30%">
          <tr>
            <th>ID</th>
            <th>Group Name</th>
            <th>Edit</th>
            <th>Delete</th>
          </tr>
          <%var i =1%>
          <%dataG.forEach(d => {%>
            <tr>
            <td><%=i%><%i+=1%></td>
            <td><%=d.name_of_group%></td>
            <td><a href="/groups/edit/<%=d.id%>">Edit</a></td>
            <td><a href="/groups/delete/<%=d.id%>">Delete</a></td>
          <%})%>
          </tr>
</table>
    </h2>
    <h3>Add Group</h3>
    <h4>
      <form action="/groups" method="post">
          Name:<br>
          <input type="text" name="group" placeholder="group name">
          <button type="submit" name="button">Add new group</button>
        </form>
    </h4>
    <a href="/">Home</a>
  </body>
</html>
