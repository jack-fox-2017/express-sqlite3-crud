<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <h1>Groups</h1>
    <table border="1px">
      <tr>
        <th>ID</th>
        <th>Group Name</th>
        <th>Action</th>
      </tr>
      <% data.forEach(d => { %>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.name_of_group %></td>
        <td><a href="/group/edit-group/<%= d.id %>"><button type="button" name="button">Edit</button></a></td>
        <td><a href="/group/delete/<%= d.id %>"><button type="button" name="button">Delete</button></a></td>
      </tr>
      <% }) %>
    </table>
    <br>
    <form action="/group" method="post">
      <input type="text" name="name_of_group" placeholder="Group Name"><br>
      <button type="submint" name="submit">SUBMIT</button>
    </form>
  </body>
</html>
