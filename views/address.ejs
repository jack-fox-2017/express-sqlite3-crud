<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include part/css %>
  </head>
  <body>
    <%- include part/menu %>

    <div class="col-md-8 col-md-offset-2">
      <form class="form-inline" action="/addresses" method="post">
        <label>New Address Register Form</label><br>
        <input type="text" name="address" placeholder="ex: Saleh Sungkar Street no. 13" class="form-control">
        <input type="text" name="city" placeholder="ex: South Jakarta" class="form-control">
        <input type="text" name="zipcode" placeholder="ex: 41230" class="form-control">
        <select  name="ContactId" class="form-control">
          <option value="" disabled selected>select Contact</option>

          <% kontak.forEach(getData => { %>
            <option value="<%= getData.id %>"><%= getData.name %></option>
          <% }) %>
        </select>
        <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Add New Address</button>
      </form>
      <br>
      <table class="table table-hover">
        <tr class="info">
          <td class="text-center">No</td>
          <td class="text-center">Address ID</td>
          <td>Address </td>
          <td>City</td>
          <td>Zip Code</td>
          <td>Contact Id</td>
          <td class="text-center">Action</td>
        </tr>
        <% let i = 1; addressData.forEach(address => { %>
          <tr>
            <td class="text-center"><%= i++ %></td>
            <td class="text-center"><%= address.id %></td>
            <td><%= address.address %></td>
            <td><%= address.city %></td>
            <td><%= address.zipcode %></td>
            <td><%= address.ContactId %></td>
            <td class="text-center">
              <a href="/addresses/<%= address.id %>/edit"><button type="button" name="button" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span> Edit</button></a>
              <a href="/addresses/<%= address.id %>/delete"><button type="button" name="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button></a>
            </td>
          </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
