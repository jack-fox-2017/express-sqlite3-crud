<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <%- include part/css %>
  </head>
  <body>
    <%- include part/menu %>

    <div class="col-md-8 col-md-offset-2">
      <form class="form-inline" action="/contacts" method="post">
        <input type="text" name="name" placeholder="ex: Achim Baggins" class="form-control">
        <input type="text" name="company" placeholder="ex: Achim Corp" class="form-control">
        <input type="text" name="phone" placeholder="ex: 0818" class="form-control">
        <input type="text" name="email" placeholder="ex: me@achim.my.id" class="form-control">
        <button type="submit" name="button" class="btn btn-info"><span class="glyphicon glyphicon-send"></span> &nbsp; Add Contact</button>
      </form>
      <br>
      <table class="table table-hover">
        <tr class="info">
          <td class="text-center">No</td>
          <td class="text-center">Contact ID</td>
          <td>Name </td>
          <td>Company</td>
          <td>Phone</td>
          <td>Email</td>
          <td class="text-center">Action</td>
        </tr>
        <% let i = 1; contactData.forEach(kontak => { %>
          <tr>
            <td class="text-center"><%= i++ %></td>
            <td class="text-center"><%= kontak.id %></td>
            <td><%= kontak.name %></td>
            <td><%= kontak.company %></td>
            <td><%= kontak.phone %></td>
            <td><%= kontak.email %></td>
            <td class="text-center">
              <a href="/contacts/<%= kontak.id %>/edit"><button type="button" name="button" class="btn btn-warning"><span class="glyphicon glyphicon-edit"></span> Edit</button></a>
              <a href="/contacts/<%= kontak.id %>/delete"><button type="button" name="button" class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button></a>
            </td>
          </tr>
        <% }) %>
      </table>
    </div>
  </body>
</html>
