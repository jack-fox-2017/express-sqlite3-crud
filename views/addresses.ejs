<!DOCTYPE html>
<html>
  <head>
    <style>
    table, th, td {
      border: 1px solid black;
    }
    fieldset {
       display: block;
       margin-left: 2px;
       margin-right: 1950px;
       padding-top: 0.35em;
       padding-bottom: 0.625em;
       padding-left: 0.175em;
       padding-right: 0.75em;
       border: 2px groove (internal value);
    }
    </style>
    <meta charset="utf-8">
    <title>Adresses</title>
  </head>
  <body>

    <h1> Welcome To Addresses </h1>

    <a href='/'>home</a>
<br><br>
      <table>
        <tr>
          <th>Id</th>
          <th>Street</th>
          <th>City</th>
          <th>Zip Code</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>
        <% data.forEach(d => {  %>
        <tr>
          <td><%= d.id %></td>
          <td><%= d.street %></td>
          <td><%= d.city %></td>
          <td><%= d.zipcode %></td>
          <td><a href='/addresses/editAddresses/<%= d.id %>'>edit</a></td>
          <td><a href="/addresses/deleteAddresses/<%= d.id %>">delete</td>
        </tr>
        <%  }) %>
      </table>

      <h1> </h1>
      <form action="/addresses" method="post">
        <fieldset>
          <legend>Tambah Address </legend>
          Street:<br>
          <input type="text" name="street">
          <br>
          City:<br>
          <input type="text" name="city">
          <br>
          Zip code:<br>
          <input type="text" name="zipcode">
          <br><br>
          <button type="submit">Save</button>
        </fieldset>
      </form>
  </body>
</html>
