<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>ADDRESSES</title>
    <style>
      table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
      }

      td,
      th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
      }

      tr:nth-child(even) {
        background-color: #dddddd;
      }
    </style>
  </head>

  <body>
    <div class="title" align=center>
      <table align=center>
        <tr>
          <th>ID</th>
          <th>ALAMAT</th>
          <th>KODE POS</th>
          <th>CONTACT</th>
        </tr>
        <% dataAddresses.forEach( prof => { %>
          <tr>
            <td>
              <%= prof.id %>
            </td>
            <td>
              <%= prof.alamat %>
            </td>
            <td>
              <%= prof.kodepos %>
            </td>
            <td>
              <%= prof.name %>
            </td>
            <td><a href="/addresses/editA/<%= prof.id %>">EDIT</a></td>
            <td><a href="/addresses/delete/<%= prof.id %>">DELETE</a></td>
          </tr>
          <% }) %>
      </table>
      <h1>FORM</h1>
      <form action="/addresses" method="post">
        <input type="text" name="alamat" placeholder="Insert Your address"><br>
        <input type="text" name="kodepos" placeholder="Insert Your ZIP code"><br>
        <select name="drop">
          <% dataContact.forEach( cont => { %>
        <option value="<%=cont.id%>">
          <%=cont.name%>
        </option>
        <% }) %>
          </select>
        <input type="submit" value="Submit">
      </form>
      <br><br>
      <a href="/">BACK</a>
    </div>
  </body>

</html>
