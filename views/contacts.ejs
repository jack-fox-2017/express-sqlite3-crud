<!DOCTYPE html>
<html>
  <head>
    <style>
    table, th, td {
      border: 1px solid black;
    }
    fieldset {
       display: block;
       margin-left: 2px;
       margin-right: 1950px;
       padding-top: 0.35em;
       padding-bottom: 0.625em;
       padding-left: 0.175em;
       padding-right: 0.75em;
       border: 2px groove (internal value);
    }
    </style>
    <meta charset="utf-8">
    <title>Contacts</title>
  </head>
  <body>

  <h1> Welcome To Contacts </h1>

<a href='/'>home</a>
<br><br>
    <table>
      <tr>
        <th>Id</th>
        <th>Nama</th>
        <th>Company</th>
        <th>TelpNumber</th>
        <th>Email</th>
        <th>Edit</th>
        <th>Delete</th>

      </tr>
      <% data.forEach(d => {  %>
      <tr>
        <td><%= d.id %></td>
        <td><%= d.name %></td>
        <td><%= d.company %></td>
        <td><%= d.telp_number %></td>
        <td><%= d.email %></td>
        <td><a href="contacts/editContacts/<%= d.id %>">edit</a></td>
        <td><a href="contacts/delete/<%= d.id %>">delete</td>
      </tr>
      <%  }) %>
    </table>

    <h1> </h1>
    <form action="/contacts" method="post">
      <fieldset>
        <legend>Tambah Kontak </legend>
        Nama:<br>
        <input type="text" name="Name">
        <br>
        Company:<br>
        <input type="text" name="Company">
        <br>
        No Telp:<br>
        <input type="text" name="Telp_number">
        <br>
        Email:<br>
        <input type="text" name="Email">
        <br><br>
        <button type="submit">Save</button>
      </fieldset>
    </form>




  </body>
</html>
