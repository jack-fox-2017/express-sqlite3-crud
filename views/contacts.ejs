<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>My Contacts</title>
  </head>
  <body>
    <h1>Contact List View</h1>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Company</th>
          <th>Phone Number</th>
          <th>Email</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
        <%ctc.forEach(c=> { %>
          <tr>
            <td><%= c.id %></td>
            <td><%= c.name %></td>
            <td><%= c.company %></td>
            <td><%= c.telp_number %></td>
            <td><%= c.email %></td>
            <td><a href="/contacts/edit/<%=c.id%>">Edit</a> | <a href="/contacts/delete/<%=c.id%>">Delete</a></td>
          </tr>
        <% })%>
      </tbody>
    </table>
    <br><br>
    <form action="/contacts" method="post">
      <fieldset>
        <legend>Personal Information</legend>
        <input type="text" name="name" placeholder="ketik nama"><br>
        <input type="text" name="company" placeholder="ketik nama perusahaan"><br>
        <input type="text" name="telp_number" placeholder="ketik nomor telp"><br>
        <input type="text" name="email" placeholder="ketik email"><br>
        <input type="submit" value="Add">
      </fieldset>
    </form>
    <br><br>
    <a href="/">Home</a>
    <a href="/contacts">Contacts</a>
    <a href="/groups">Groups</a>
  </body>
</html>
