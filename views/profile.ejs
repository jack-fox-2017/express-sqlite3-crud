<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <style>
    table {
      font-family:Gill Sans Extrabold, sans-serif;
      position: center;
    }

    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 1px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
  </style>
  <title>Contact</title>
  </head>

  <body>
  <center><h3>PROFILE INFO</h3><center><br>
  <a href="/profile/add"><button type="Submit" name="Add">Add New Profile</button></a>

  <br><br>
  <form action="/profile" method="POST">
  <center>
  <table>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Password</th>
      <th>Contact ID</th>

      <th colspan='3'></th>
    </tr>
    <% dataProfiles.forEach(profiles =>{%>
    <tr>
      <td><%= profiles.id %></td>
      <td><%= profiles.Username %></td>
      <td><%= profiles.Password %></td>
      <td><%= profiles.Contact_Id %></td>
      <td><a href="/profile/edit/<%= profiles.id %>"><button type="button" name="Edit">EDIT</button></a></td>
      <td><a href="/profile/delete/<%= profiles.id %>"><button type="button" name="Delete">DELETE</button></a></td>
      <td><a href="/profile/detail/<%= profiles.id %>"><button type="button" name="Delete">DETAIL</button></a></td>
      </tr>
      <%})%>
    </table>
  </center>
    </form>
  </body>
</html>
